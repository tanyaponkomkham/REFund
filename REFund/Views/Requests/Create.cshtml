<script type="text/javascript">
    $(document).ready(function () {
        let today = new Date().toISOString().slice(0, 10);
        let [year, month, day] = today.split('-');
        let formattedDate = `${day}/${month}/${year}`;
        let AmountinLetter = "(....................................................................................................................................)";
